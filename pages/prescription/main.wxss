.container{
  background: #f2f2f2;
  padding-top: 0rpx;
}

.container>.section{
  margin: 20rpx 0rpx 10rpx 0rpx;
  width: 750rpx;
  background: white;
  display:flex;
  flex-direction:row;
}

#user_infor{
  height: fit-content;
}

#user_infor>.subsection{
  margin: 40rpx;
}

#avatar{
  height: 160rpx;
  width: 160rpx;
  border: solid;
  border-radius: 5px;
}

#texts{
  height: 160rpx; 
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: left;
}
#texts>text{
  flex:1; 
  line-height: 80rpx;
}

#medicines{
  margin: 10rpx 0rpx 20rpx 0rpx;
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

#medicines>.record{
  height: 150rpx; 
  width: 750rpx;
  border-bottom: 1rpx solid #f2f2f2; 
  display: flex;
  flex-direction: row;
}

#medicines>.record>.picture{
  margin: 35rpx;
  height: 80rpx;
  width: 80rpx;
}
#medicines>.record>.texts{
  margin: 15rpx;
  height: 120rpx;
  width: 600rpx;
  display: flex;
  flex-direction: row;
}
#medicines>.record>.texts>text{
  display: inline-block;
  line-height: 120rpx;
  width: 300rpx;
  text-align: center;
}

